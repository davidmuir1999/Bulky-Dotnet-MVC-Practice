@if(TempData["success"] != null){ //calling the page message, will appear once change is made
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script> //toastr notifications
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script> //toastr notifications
    @* adding toastr notifications to page *@
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
    
}
@if(TempData["error"] != null){ //calling the page message, will appear once change is made
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script> //toastr notifications
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script> //toastr notifications
    <script type="text/javascript">
        toastr.error('@TempData["success"]');
    </script>
}

